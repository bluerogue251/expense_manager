<%= simple_form_for @expense, remote: true do |f| %>
  <%= render "shared/errors", object: f.object %>
  <%= f.input :date, as: :string, wrapper_html: { class: "medium" }, input_html: { class: "datepicker" } %>
  <%= f.association :category, wrapper_html: { class: "medium" } %>
  <%= f.input :description, wrapper_html: { class: "large" } %>
  <%= f.input :currency, collection: ExchangeRate::CURRENCIES, required: true, wrapper_html: { class: "tiny" } %>
  <%= f.input :amount, wrapper_html: { class: "small" } %>
  <%= f.button :submit %>
<% end %>

