<%= simple_form_for @expense, remote: true do |f| %>
  <%= render "shared/errors", object: f.object %>
  <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
  <%= f.association :category %>
  <%= f.input :description %>
  <%= f.input :currency, collection: ExchangeRate::CURRENCIES %>
  <%= f.input :amount %>
  <%= f.button :submit %>
<% end %>

