<%= simple_form_for exchange_rate, remote: true do |f| %>
  <%= render "shared/errors", object: f.object %>
  <%= f.input :anchor, collection: ExchangeRate::CURRENCIES, wrapper_html: { class: "small" }, required: true %>
  <%= f.input :float, collection: ExchangeRate::CURRENCIES, wrapper_html: { class: "small" }, required: true %>
  <%= f.input :rate, wrapper_html: { class: "small" }, required: true %>
  <%= f.input :starts_on, as: :string, wrapper_html: { class: "small" }, input_html: { class: "datepicker" } %>
  <%= f.input :ends_on, as: :string, wrapper_html: { class: "small" }, input_html: { class: "datepicker" } %>
  <%= f.button :submit %>
<% end %>
